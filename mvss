local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()

local Window = OrionLib:MakeWindow({
    Name = "Publoader - MurderVsSheriffs",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "SubscribeToPubzy",
    Color = Color3.fromRGB(30, 30, 30)
})

local LocalPlayer = game.Players.LocalPlayer
local HitboxSettings = { Color = Color3.fromRGB(255, 0, 0), Transparency = 0.5, Size = 2 }
local ExpanderEnabled = false
local performanceOptimized = false

-- Tabs
local mainTab = Window:MakeTab({ Name = "General", Icon = "rbxassetid://123456" })
local espTab = Window:MakeTab({ Name = "ESP", Icon = "rbxassetid://789101" })
local characterTab = Window:MakeTab({ Name = "Player Settings", Icon = "rbxassetid://112233" })


------------------------
-- General Tab (FOV)
------------------------
mainTab:AddSection({ Name = "Field of View" })
mainTab:AddSlider({
    Name = "Camera FOV",
    Min = 50, Max = 120, Default = 70,
    Color = Color3.fromRGB(0, 255, 0),
    Increment = 1, ValueName = "FOV",
    Callback = function(value)
        workspace.CurrentCamera.FieldOfView = value
    end
})
mainTab:AddButton({
    Name = "Reset FOV",
    Callback = function()
        workspace.CurrentCamera.FieldOfView = 70
    end
})

------------------------
-- Hitbox Settings
------------------------
function updateHitboxes()
    while ExpanderEnabled do
        wait(0.1)
        for _, player in ipairs(game.Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Team ~= LocalPlayer.Team then
                local character = player.Character
                local rootPart = character and character:FindFirstChild("HumanoidRootPart")
                if rootPart then
                    rootPart.Size = Vector3.new(HitboxSettings.Size, HitboxSettings.Size, HitboxSettings.Size)
                    rootPart.CanCollide = false
                    rootPart.Transparency = HitboxSettings.Transparency
                    rootPart.Color = HitboxSettings.Color
                end
            end
        end
    end
end

mainTab:AddSection({ Name = "Hitbox Configuration" })
mainTab:AddToggle({
    Name = "Hitbox Expander", Default = false,
    Callback = function(state)
        ExpanderEnabled = state
        if ExpanderEnabled then
            updateHitboxes()
        end
    end
})
mainTab:AddColorpicker({
    Name = "Hitbox Color", Default = Color3.fromRGB(255, 0, 0),
    Callback = function(value)
        HitboxSettings.Color = value
    end
})
mainTab:AddSlider({
    Name = "Hitbox Size", Min = 2, Max = 50, Default = 2,
    Color = Color3.fromRGB(255, 165, 0),
    Increment = 1, Callback = function(value)
        HitboxSettings.Size = value
    end
})
mainTab:AddSlider({
    Name = "Hitbox Transparency", Min = 0, Max = 1, Default = 0.5,
    Color = Color3.fromRGB(255, 0, 255),
    Increment = 0.1, Callback = function(value)
        HitboxSettings.Transparency = value
    end
})

