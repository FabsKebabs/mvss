espTab:AddButton({
    Name = "Glow ESP",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/FabsKebabs/esp/refs/heads/main/glowesp"))()
    end
})

------------------------
-- Player Settings (Teleport & WalkSpeed)
------------------------
characterTab:AddSection({ Name = "Player Teleport" })
for _, player in ipairs(game.Players:GetPlayers()) do
    if player ~= LocalPlayer then
        characterTab:AddButton({
            Name = player.Name,
            Callback = function()
                local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
                if root then
                    LocalPlayer.Character.HumanoidRootPart.CFrame = root.CFrame
                end
            end
        })
    end
end

characterTab:AddSlider({
    Name = "WalkSpeed", Min = 0, Max = 50, Default = 16,
    Color = Color3.fromRGB(255, 0, 0),
    Increment = 1, Callback = function(value)
        LocalPlayer.Character.Humanoid.WalkSpeed = value
    end
})


------------------------
-- Aimbot Toggle
------------------------
Tab1:AddToggle({
    Name = "AimBot",
    Default = false,
    Callback = function(v)
        AimBotEnabled = v
        if AimBotEnabled then
            HB_Settings.Size = 9999999
            HB_Settings.Transparency = 1
            addHitBoxChanges()
            teleportToClick()
        else
            HB_Settings.Size = 2
            HB_Settings.Transparency = 0.5
        end
    end
})
