espTab:AddLabel({
    Name = "Warning",
    Text = "Be careful not to add too much ESP or you can crash.",
    TextColor = Color3.fromRGB(255, 0, 0), -- Red text for emphasis
    FontSize = 16, -- You can adjust the font size if needed
})

espTab:AddButton({
    Name = "Skeleton ESP",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/FabsKebabs/esp/refs/heads/main/SkeletonEsp"))()
    end
})

espTab:AddButton({
    Name = "Circle ESP",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/FabsKebabs/esp/refs/heads/main/espmvs"))()
    end
})

espTab:AddButton({
    Name = "Name ESP",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/FabsKebabs/esp/refs/heads/main/mvs2"))()
    end
